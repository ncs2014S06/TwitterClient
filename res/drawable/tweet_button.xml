<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ボタンが押された時の定義 -->
	<item android:state_pressed="true">
	    <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
			<gradient
               android:startColor="#ffffff"
               android:endColor="#ffffff"
               android:angle="90"/>
            <corners
                android:radius="15dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <size
                android:height="30dp"
                android:width="30dp" />
        </shape>
	</item>

	<!-- ボタンが押されていないときの定義 -->
    <item android:state_pressed="false">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
               android:startColor="#00aaff"
               android:endColor="#000000"
               android:angle="90"/>
            <stroke
                android:width="1dp"
                android:color="#007fff"
                />
            <corners
                android:radius="15dp" />
            <padding
                android:left="10dp"
                android:top="15dp"
                android:right="10dp"
                android:bottom="15dp" />
            <size
                android:height="30dp"
                android:width="30dp" />
        </shape>
    </item>





</selector>