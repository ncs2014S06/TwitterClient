<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.test2.MainActivity" >

    <!-- 第1レイアウト -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.loopj.android.image.SmartImageView
            android:id="@+id/user_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/text_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="まっさん" />

        <TextView
            android:id="@+id/text_userfrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="名古屋市　幸田出身" />
    </LinearLayout>

    <!-- 第2レイアウト -->

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="180dp"
        android:layout_marginTop="150dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_context"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="まっさんです。僕はホモです＾＾\nガチムチだいすきです。" />
    </LinearLayout>

    <!-- 第3レイアウト -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="300dp"
        android:layout_marginTop="250dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_updateday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:drawableLeft="@drawable/update1"
            android:text="  1993/07/23 14:45:89"
            android:textSize="12dp" />

    </LinearLayout>

     <!-- 第4レイアウト -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="277dp" >

        <Button
            android:id="@+id/bt_tweet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tweet_button"
            android:text="ツイート"
            android:textColor="#ffffff"
            android:textSize="12dp" />

        <Button
            android:id="@+id/space"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:background="@null"
            android:text="" />

        <Button
            android:id="@+id/bt_follow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tweet_button"
            android:text="フォロー"
            android:textColor="#ffffff"
            android:textSize="12dp" />

        <Button
            android:id="@+id/space1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:background="@null"
            android:text="" />

        <Button
            android:id="@+id/bt_follower"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tweet_button"
            android:text="フォロワー"
            android:textColor="#ffffff"
            android:textSize="12dp" />
    </LinearLayout>

    <!-- 第5レイアウト -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="328dp" >

        <Button
            android:id="@+id/bt_favorite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tweet_button"
            android:text="お気に入り"
            android:textColor="#ffffff"
            android:textSize="12dp" />

        <Button
            android:id="@+id/space2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:background="@null"
            android:text="" />

        <Button
            android:id="@+id/bt_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:text="リスト登録"
            android:textColor="#ffffff"
            android:textSize="12dp" />

        <Button
            android:id="@+id/space3"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:background="@null"
            android:text="" />

        <Button
            android:id="@+id/bt_space"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:textSize="12dp" />
    </LinearLayout>

    <!-- 第6レイアウト -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="380dp" >

        <Button
            android:id="@+id/bt_tweetsend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tweet_button"
            android:text="ツイート送信"
            android:textColor="#ffffff"
            android:textSize="12dp" />
    </LinearLayout>

</RelativeLayout>