<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.test2.MainActivity" >

    <!-- 第1レイアウト -->

   <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#696969"
        android:orientation="vertical" >

        <com.loopj.android.image.SmartImageView
            android:id="@+id/image_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher" />



        <TextView
            android:id="@+id/text_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="まっさん"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/text_userfrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="名古屋市　幸田出身"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/text_context"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="まっさんです。僕はホモです＾＾\nガチムチだいすきです。"
            android:textColor="#ffffff" />
    </LinearLayout>

<!-- 第１ -->
<!-- 第２ -->

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout3" >

        <Button
            android:id="@+id/myTweet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tweet_button"
            android:text=""
            android:textColor="#1a1a1a"
            android:textSize="15dp" />

        <Button
            android:id="@+id/follow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tweet_button"
            android:text=""
            android:textColor="#1a1a1a"
            android:textSize="15dp" />

        <Button
            android:id="@+id/follower"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tweet_button"
            android:text=""
            android:textColor="#1a1a1a"
            android:textSize="14dp" />

    </LinearLayout>
    <!-- 第２ -->
    <!-- 第３ -->

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#00FF0000"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/bt_update"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:contentDescription="a"
            android:src="@android:drawable/ic_menu_rotate" />

        <ImageButton
            android:id="@+id/bt_tuito"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:contentDescription="a"
            android:src="@android:drawable/ic_menu_call" />

        <ImageButton
            android:id="@+id/bt_user"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:contentDescription="a"
            android:src="@android:drawable/ic_menu_preferences" />

        <ImageButton
            android:id="@+id/bt_dm"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:contentDescription="a"
            android:src="@android:drawable/ic_dialog_email" />
    </LinearLayout>
<!-- 第３ -->

    <ListView
        android:id="@+id/user_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout2" >
    </ListView>

</RelativeLayout>
