<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#ffffffff" >

		<ScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical" >

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical" >

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="vertical" >

					<RelativeLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content" >

						<com.loopj.android.image.SmartImageView
						    android:id="@+id/backimage"
						    android:layout_width="match_parent"
						    android:layout_height="250dp"
						    android:scaleType="fitXY"
						    android:src="@drawable/ic_launcher" />

						<LinearLayout
							android:id="@+id/linearLayout3"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="vertical" >

							<com.loopj.android.image.SmartImageView
								android:id="@+id/tweet_detail_usericon"
								android:layout_width="match_parent"
								android:layout_height="105dp"
								android:paddingBottom="@dimen/activity_vertical_margin"
								android:paddingTop="@dimen/activity_vertical_margin"
								android:src="@drawable/ic_launcher" />

							<TextView
								android:id="@+id/text_username"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_gravity="center"
								android:background="#40000000"
								android:text="username"
								android:textColor="#ffffff"
								android:textSize="18dp" />

							<TextView
								android:id="@+id/text_userfrom"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_gravity="center"
								android:background="#40000000"
								android:text="userscreenname"
								android:textColor="#ffffff"
								android:textSize="18dp" />

							<TextView
								android:id="@+id/text_context"
								android:layout_width="match_parent"
								android:layout_height="87dp"
								android:background="#40000000"
								android:text="context"
								android:textColor="#ffffff"
								android:textSize="18dp" />
						</LinearLayout>

					</RelativeLayout>

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical" >

						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content" >

							<Button
								android:id="@+id/myTweet"
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:background="@drawable/tweet_button"
								android:textColor="#1a1a1a"
								android:textSize="15dp" />

							<Button
								android:id="@+id/follow"
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:background="@drawable/tweet_button"
								android:textColor="#1a1a1a"
								android:textSize="15dp" />

							<Button
								android:id="@+id/follower"
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:background="@drawable/tweet_button"
								android:textColor="#1a1a1a"
								android:textSize="14dp" />
						</LinearLayout>

						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content" >

							<Button
								android:id="@+id/fav"
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:background="@drawable/tweet_button"
								android:textColor="#1a1a1a"
								android:textSize="14dp" />

							<Button
								android:id="@+id/list"
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:background="@drawable/tweet_button"
								android:textColor="#1a1a1a"
								android:textSize="14dp" />

							<ImageButton
							    android:id="@+id/doFollow"
							    android:layout_width="0dp"
							    android:layout_height="wrap_content"
							    android:layout_weight="1"
							    android:background="@drawable/ic_assignment_ind_grey600_48dp"
							    android:textColor="#1a1a1a"
							    android:textSize="14dp" />

						</LinearLayout>
					</LinearLayout>
				</LinearLayout>
			</RelativeLayout>
		</ScrollView>

		<LinearLayout
			android:id="@+id/linearLayout1"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:background="#00FF0000"
			android:layout_alignParentBottom="true"
			android:orientation="horizontal" >

			<ImageButton
				android:id="@+id/bt_reply"
				android:layout_width="100dp"
				android:layout_height="40dp"
				android:layout_alignParentBottom="true"
				android:layout_weight="1"
				android:background="#00000000"
				android:contentDescription="a"
				android:src="@android:drawable/ic_menu_rotate" />

			<ImageButton
				android:id="@+id/bt_retweet"
				android:layout_width="100dp"
				android:layout_height="40dp"
				android:layout_weight="1"
				android:background="#00000000"
				android:contentDescription="a"
				android:src="@android:drawable/ic_menu_call" />

			<ImageButton
				android:id="@+id/bt_fav"
				android:layout_width="100dp"
				android:layout_height="40dp"
				android:layout_weight="1"
				android:background="#00000000"
				android:contentDescription="a"
				android:src="@android:drawable/ic_menu_preferences" />

			<ImageButton
				android:id="@+id/bt_more"
				android:layout_width="100dp"
				android:layout_height="40dp"
				android:layout_weight="1"
				android:background="#00000000"
				android:contentDescription="a"
				android:src="@android:drawable/ic_dialog_email" />
		</LinearLayout>

</RelativeLayout>
