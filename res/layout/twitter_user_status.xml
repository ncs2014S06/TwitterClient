<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#ffffffff" >

		<ScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical" >

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical" >

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="vertical" >

					<RelativeLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content" >

						<com.loopj.android.image.SmartImageView
						    android:id="@+id/backimage"
						    android:layout_width="match_parent"
						    android:layout_height="250dp"
						    android:scaleType="fitXY"
						    android:src="@drawable/ic_launcher" />

						<LinearLayout
							android:id="@+id/linearLayout3"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="vertical" >

							<com.loopj.android.image.SmartImageView
								android:id="@+id/tweet_detail_usericon"
								android:layout_width="match_parent"
								android:layout_height="105dp"
								android:paddingBottom="@dimen/activity_vertical_margin"
								android:paddingTop="@dimen/activity_vertical_margin"
								android:src="@drawable/ic_launcher" />

							<TextView
								android:id="@+id/text_username"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_gravity="center"
								android:background="#40000000"
								android:text="username"
								android:textColor="#ffffff"
								android:textSize="18dp" />

							<TextView
								android:id="@+id/text_userfrom"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_gravity="center"
								android:background="#40000000"
								android:text="userscreenname"
								android:textColor="#ffffff"
								android:textSize="18dp" />

							<TextView
								android:id="@+id/text_context"
								android:layout_width="match_parent"
								android:layout_height="87dp"
								android:background="#40000000"
								android:text="context"
								android:textColor="#ffffff"
								android:textSize="18dp" />
						</LinearLayout>

					</RelativeLayout>

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical" >

						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content" >

							<Button
								android:id="@+id/myTweet"
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:background="@drawable/tweet_button"
								android:textColor="#1a1a1a"
								android:textSize="15dp" />

							<Button
								android:id="@+id/follow"
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:background="@drawable/tweet_button"
								android:textColor="#1a1a1a"
								android:textSize="15dp" />

							<Button
								android:id="@+id/follower"
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:background="@drawable/tweet_button"
								android:textColor="#1a1a1a"
								android:textSize="14dp" />
						</LinearLayout>

						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content" >

							<Button
								android:id="@+id/fav"
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:background="@drawable/tweet_button"
								android:textColor="#1a1a1a"
								android:textSize="14dp" />

							<Button
								android:id="@+id/list"
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:background="@drawable/tweet_button"
								android:textColor="#1a1a1a"
								android:textSize="14dp" />

							<Button
							    android:id="@+id/create_follow_bt"
							    android:layout_width="0dp"
							    android:layout_height="match_parent"
							    android:layout_weight="1"
							    android:background="#aaaaaa"
							    android:text="フォローする"
							    android:textColor="#eeeeee"
							    android:textSize="20sp" />

						</LinearLayout>
					</LinearLayout>
				</LinearLayout>
			</RelativeLayout>
		</ScrollView>

</RelativeLayout>