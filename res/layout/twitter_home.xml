<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context="com.example.mytwitter.MainActivity" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <!-- <LinearLayout -->
    <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <ListView
                android:id="@+id/tllist"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:divider="#000000"
                android:dividerHeight="1dp" >

            </ListView>
            </android.support.v4.widget.SwipeRefreshLayout>
    <!-- </LinearLayout> -->

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/bt_reply"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:contentDescription="a"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_refresh_white_24dp"
            	android:tint="@color/filter_gray_color" />

            <ImageButton
                android:id="@+id/bt_retweet"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:contentDescription="a"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_messenger_white_24dp"
            	android:tint="@color/filter_gray_color" />

            <ImageButton
                android:id="@+id/bt_fav"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:contentDescription="a"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_person_white_24dp"
            	android:tint="@color/filter_gray_color" />

            <ImageButton
                android:id="@+id/bt_more"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:contentDescription="a"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_mail_white_24dp"
            	android:tint="@color/filter_gray_color" />

        </LinearLayout>

    </FrameLayout>

</RelativeLayout>